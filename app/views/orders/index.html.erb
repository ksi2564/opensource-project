<div class="container">
	<div class="row">
		<div class="col-12">
			<div class="mt-4">
				<h5>
					주문 내역
					<small class="text-muted">지난 3년간의 주문 내역 조회가 가능합니다</small>
				</h5>
				<table class="table">
					<thead>
						<tr>
							<th scope="col" style="width: 10%;"></th>
							<th scope="col" style="width: 60%;"></th>
							<th scope="col" style="width: 15%;"></th>
							<th scope="col"></th>
						</tr>
					</thead>
					<tbody>
						<% @orders.each do |order| %>
						<tr>
							<% if order.completed? | order.processed? %>
							<td><%= order.created_at.strftime("%F") %></td>
							<td><%= order.name %></td>
							<td><%= order.address %></td>
							<td><span class="badge badge-warning"><%= order.status %></span></td>
							<td><a href="#" class="btn btn-primary">후기쓰기</a></td>
							<% else %>
							
							<% end %>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<script>
	 <% if flash[:notice].present? %>
		alert("<%= flash[:notice] %>")
	 <% end %>
</script>